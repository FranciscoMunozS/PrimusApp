<div class="container">
  <div class="card o-hidden border-0 shadow-lg my-5">
    <div class="card-body p-0">
      <div class="row">
        <div class="col-lg-5 0d-none d-lg-block bg-register-image"></div>
        <div class="col-lg-7">
          <div class="p-5">
            <div class="text-center">
              <h1 class="h4 text-gray-900 mb-4">Crear una cuenta</h1>
            </div>
            <hr>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-group">
                <%= f.input :email,
                            label: 'Correo electronico',
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: 'form-control form-control-user' } %>
              </div>
              <div class="form-group row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <%= f.input :password,
                              label: 'ContraseÃ±a',
                              required: true,
                              hint: ("#{@minimum_password_length} caracteres minimo" if @minimum_password_length),
                              input_html: { autocomplete: "new-password" } %>
                </div>
                <div class="col-sm-6 mb-3 mb-sm-0">
                  <%= f.input :password_confirmation,
                              label: 'Confirmar contraseÃ±a',
                              required: true,
                              input_html: { autocomplete: "new-password" } %>
                </div>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Crear cuenta", class: 'btn btn-primary btn-block' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
