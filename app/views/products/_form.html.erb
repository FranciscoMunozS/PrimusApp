<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card">
    <div class="card-body">
      <div class="form-inputs">
        <%= f.input :item_code, label: 'Codigo' %>
        <div class="row">
          <div class="col-md-6"><%= f.input :ubication, label: 'Ubicación' %></div>
          <div class="col-md-6"><%= f.input :category, label: 'Categoria' %></div>
        </div>
        <div class="row">
          <div class="col-md-6"><%= f.input :unitary_cost, as: :string, label: 'Precio unitario' %></div>
          <div class="col-md-6"><%= f.input :quantity, as: :string, label: 'Cantidad' %></div>
        </div>
        <%= f.input :total_value, label: 'Valor total', disabled: true %>
        <%= f.input :description, label: 'Descripción' %>
      </div>
    </div>
    <div class="card-footer">
      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary' %>
        <%= link_to 'Cancelar', root_path, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
<% end %>
