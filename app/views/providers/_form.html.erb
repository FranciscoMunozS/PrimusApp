
<%= simple_form_for(@provider) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="card">
    <div class="card-body">
      <div class="form-inputs">
        <div class="row">
          <div class="col-md-6"><%= f.input :rut, label: 'RUT proveedor' %></div>
          <div class="col-md-6"><%= f.input :name, label: 'Nombre proveedor' %></div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <%= f.input :email, label: 'Correo electronico proveedor' %>
          </div>
          <div class="col-md-6">
            <%= f.input :phone, label: 'Telefono proveedor' %>
          </div>
        </div>
        <%= f.input :description, label: 'DescripciÃ³n', as: :text %>
      </div>
    </div>
    <div class="card-footer">
      <div class="form-actions">
        <%= f.button :submit, class: 'btn btn-primary' %>
        <%= link_to 'Cancelar', root_path, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>

<% end %>
