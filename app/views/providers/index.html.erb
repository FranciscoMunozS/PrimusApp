<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6"><h1>Proveedores</h1></div>
  <div class="col-md-6 text-right"><%= link_to 'Nuevo proveedor', new_provider_path, class: 'btn btn-primary' %></div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nombre proveedor</th>
      <th>RUT proveedor</th>
