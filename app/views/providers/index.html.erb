<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6 text-left">
    <%= link_to 'Nuevo proveedor', new_provider_path, class: 'btn btn-success btn-sm' %>
  </div>
</div>
<br>

<div class="card shadow mb-4 border-left-success">
  <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between font-weight-bold text-success">
    Proveedores
  </div>
  <div class="card-body">
    <table class="table table-bordered text-center" id="dttb">
      <thead>
        <tr>
          <th>Nombre proveedor</th>
          <th>RUT proveedor</th>
          <th>Descripci√≥n</th>
          <th>Correo electronico</th>
          <th>Telefono</th>
          <th>Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @providers.each do |provider| %>
          <tr>
            <td><%= provider.name %></td>
            <td><%= provider.rut %></td>
            <td><%= provider.description %></td>
            <td><%= provider.email %></td>
            <td><%= provider.phone %></td>
            <td>
              <%= link_to provider, class: 'btmn btn-primary btn-sm' do %>
                <% icon('fas', 'eye', 'Ver') %>
              <% end %>
              <%= link_to edit_provider_path(provider) do %>
                <% icon('fas', 'edit', 'Editar') %>
              <% end %>
              <%= link_to provider, method: :delete, data: { confirm: 'Esta seguro?' } do %>
                <% icon('fas', 'trash-alt', 'Eliminar') %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
